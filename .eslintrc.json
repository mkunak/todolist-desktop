{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "prettier",
        "airbnb-base"
    ],
    "plugins": [
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "prettier/prettier": "error",
        "comma-dangle": ["error", "only-multiline"],
        "max-len": ["error", { "code": 80 }],
        "no-param-reassign": ["error"],
        "no-use-before-define": ["error", { "functions": false }]
    }
}
